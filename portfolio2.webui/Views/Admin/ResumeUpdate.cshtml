@model ResumeModel

<h1 class="h3">Özgeçmiş Güncelle</h1>
<hr>

<div class="row">
    <div class="col-md-12">
        <form action="/admin/resumeupdate" method="POST">
            <input type="hidden" name="ResumeId" value="@Model.ResumeId">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Title" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
             <div class="form-group row">
                <label asp-for="Company" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Company">
                    <span asp-validation-for="Company" class="text-danger"></span>
                </div>
            </div>
              <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
              <div class="form-group row">
                <label asp-for="Job" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Job">
                    <span asp-validation-for="Job" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="StartDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="StartDate">
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
            </div>
             <div class="form-group row">
                <label asp-for="FinishDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="FinishDate">
                    <span asp-validation-for="FinishDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
            <button class="btn btn-primary" type="submit">Güncelle</button>
                </div>
            </div>
    </form>
    </div>
</div>
