@model SkillModel

<h1 class="h3">Yetenek Güncelle</h1>
<hr>

<div class="row">
    <div class="col-md-12">
        <form action="/admin/skillupdate" method="POST">
            <input type="hidden" name="SkillId" value="@Model.SkillId">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="SkillName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="SkillName">
                    <span asp-validation-for="SkillName" class="text-danger"></span>
                </div>
            </div>
             <div class="form-group row">
                <label asp-for="SkillRate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="SkillRate">
                    <span asp-validation-for="SkillRate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
            <button class="btn btn-primary" type="submit">Güncelle</button>
                </div>
            </div>
    </form>
    </div>
</div>
